<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>

	<entry key="selectListCount">
		SELECT
				COUNT(*) COUNT 
		FROM  C_POST
	</entry>
	
	<entry key="selectList">
			 SELECT * 
				FROM(
					      SELECT ROWNUM RNUM, A.*
					        FROM (
					           SELECT
					                    CPOST_NO
					                  , CUSER_NAME
					                  , CPOST_TITLE
					                  , CPOST_COUNT
                                      , CPOST_DATE
					             FROM C_POST C
		                         ORDER 
					                BY CPOST_DATE DESC
					                ) A
					      )
            WHERE RNUM BETWEEN ? AND ?
	</entry>
	
	<entry key="increaseCount">
			
		UPDATE
		    C_POST
		 SET CPOST_COUNT = CPOST_COUNT +1
		 WHERE CPOST_NO = ?
		   AND REF_TYPE = 'POST'
	
	</entry>
	
	<entry key="selectCpost">
	
		SELECT 
			    CPOST_NO
			  , CUSER_NAME
			  , CPOST_TITLE
              , CPOST_COUNT
			  , CPOST_CONTENT
              , CPOST_DATE
            FROM C_POST CP
			WHERE CPOST_NO = ?
	</entry>
	
	
	<entry key="selectAttachment">
		SELECT 
		      FILE_NO
		    , ORIGIN_NAME
		    , CHANGE_NAME
		    , FILE_PATH
		FROM ATTACHMENT 
		WHERE REF_BNO = ?
		  AND REF_TYPE=POST'
	</entry>
	
</properties>