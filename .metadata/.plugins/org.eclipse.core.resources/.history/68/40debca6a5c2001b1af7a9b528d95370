<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>

	<entry key="selectDogCount">
		SELECT
		       COUNT(*) COUNT
		  FROM ANIMAL
		 WHERE AN_SPECIES = '강아지'
	</entry>
	
	<entry key="selectCatCount">
		SELECT
		       COUNT(*) COUNT
		  FROM ANIMAL
		 WHERE AN_SPECIES = '고양이'
	</entry>
	
	<entry key="selectDogList">
		SELECT *
		  FROM (
		        SELECT ROWNUM RNUM, A.*
		          FROM (
		                SELECT 
		                       AN_NO 
		                     , AN_TITLE
		                  FROM ANIMAL
		                 WHERE AN_SPECIES = '강아지'
		                 ORDER
		                    BY AN_WRITEDATE DESC
		                ) A
		        )
		 WHERE RNUM BETWEEN ? AND ?
	</entry>
	
	<entry key="selectCatList">
		SELECT *
		  FROM (
		        SELECT ROWNUM RNUM, A.*
		          FROM (
		                SELECT 
		                       AN_NO 
		                     , AN_TITLE
		                  FROM ANIMAL
		                 WHERE AN_SPECIES = '고양이'
		                 ORDER
		                    BY AN_WRITEDATE DESC
		                ) A
		        )
		 WHERE RNUM BETWEEN ? AND ?
	</entry>
	
	<entry key="increaseCount">
		UPDATE
		       ANIMAL
		   SET AN_COUNT = AN_COUNT + 1
		 WHERE AN_NO = ?     
	</entry>
	
	<entry key="selectAnimal">
		SELECT
		       AN_NO
		     , SH_NAME
		     , AN_GENDER
		     , AN_DATE
		     , AN_PLACE
		     , AN_CONTENT
		  FROM ANIMAL
		  JOIN SHELTER USING(MEM_NO)
		 WHERE AN_NO = ?
	</entry>
	
	<entry key="insertBookMark">
		INSERT
		  INTO BOOKMARK
		     (
		       MEM_NO
		     , BINFO_NO
		     , MARK_DATE
		     )
		VALUES
		     (
		       ?
		     , ?
		     , SYSDATE
		     )     
	</entry>
	
	<entry key="selectByKeyword">
		SELECT
		       VOL_NO
		     , VOL_TITLE
		     , VOL_WRITEDATE
		     , MEM_ID
		     , VOL_COUNT
		  FROM VOLUNTEER
		  JOIN MEMBER USING(MEM_NO)
		 WHERE VOL_TITLE LIKE %?%
		 ORDER BY VOL_WRITEDATE DESC;
	</entry>
	
	
</properties>