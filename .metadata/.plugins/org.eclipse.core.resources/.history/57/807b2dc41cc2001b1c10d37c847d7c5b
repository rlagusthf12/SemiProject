<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>

	<entry key="loginMember">
		SELECT 
		        MEM_NO
		      , MEM_ID
		      , MEM_PWD
		      , MEM_NAME
		      , EMAIL
		      , ENROLL_DATE
		      , STATUS
		      , MEM_CODE
		FROM MEMBER
		WHERE MEM_ID = ?
		 AND MEM_PWD = ?
		 AND STATUS = 'Y'
	
	</entry>
	
	
	<entry key="insertMember">
		INSERT
		    INTO MEMBER 
		    (
		         MEM_NO
		       , MEM_ID
		       , MEM_PWD
		       , MEM_NAME
		       , EMAIL
		       , MEM_CODE
		    )
		    VALUES
		    (
		        SEQ_UNO.NEXTVAL
		      , ?
		      , ?
		      , ?
		      , ?
		      , '3'
		    )
	</entry>
	
	<entry key="idCheck">
		SELECT
				COUNT(*)
		 FROM MEMBER
		 WHERE MEM_ID = ?
	 </entry>
	
		<entry key="searchMember">
			SELECT 
			        MEM_NO
			      , MEM_ID
			      , MEM_PWD
			      , MEM_NAME
			      , EMAIL
			      , ENROLL_DATE
			      , STATUS
			      , MEM_CODE
			FROM MEMBER
			WHERE MEM_NAME = ?
			 AND EMAIL = ?
			 AND STATUS = 'Y'
		
		</entry>
		
		
		<entry key="searchPwdMember">
			SELECT 
			        MEM_NO
			      , MEM_PWD
			      , MEM_NAME
			      , MEM_CODE
			FROM MEMBER
			WHERE MEM_NAME = ?
			 AND EMAIL = ?
			 AND MEM_ID=?
			 AND STATUS = 'Y'
		
		</entry>
		
		<entry key="changePwdMember">
			UPDATE 
			      MEMBER
			  SET MEM_PWD=?
			WHERE MEM_NO=? 
		</entry>
	
</properties>
